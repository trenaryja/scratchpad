{
	"name": "@trenaryja/scratchpad",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "concurrently \"next dev --turbo\" \"convex dev\"",
		"build": "next build",
		"start": "next start",
		"lint": "eslint .",
		"check": "bun format -c && bun lint && tsc && bun run build",
		"format": "prettier -w . !\"bun.lock\"",
		"get-latest": "bun update --latest -i",
		"reinstall": "rm -rf node_modules && rm bun.lock && bun install",
		"env:pull": "infisical export > .env.local"
	},
	"dependencies": {
		"@mantine/hooks": "^8.3.15",
		"@monaco-editor/react": "^4.7.0",
		"@trenaryja/ui": "0.0.1-35",
		"convex": "^1.31.0",
		"daisyui": "^5.5.13",
		"date-fns": "4.1.0",
		"nanoid": "^5.1.6",
		"next": "16.1.6",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"react-icons": "^5.5.0",
		"react-markdown": "^10.1.0",
		"remark-gfm": "^4.0.1",
		"remeda": "^2.32.0",
		"yjs": "^13.6.27"
	},
	"devDependencies": {
		"@fullstacksjs/eslint-config": "^14.0.1",
		"@tailwindcss/postcss": "^4.1.18",
		"@testing-library/dom": "^10.4.1",
		"@types/node": "^25.0.1",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"concurrently": "^9.2.1",
		"eslint": "10",
		"prettier": "^3.7.4",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3"
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"printWidth": 120,
		"jsxSingleQuote": true,
		"useTabs": true
	},
	"trustedDependencies": [
		"esbuild",
		"sharp",
		"unrs-resolver"
	]
}
