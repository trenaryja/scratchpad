{
	"name": "@trenaryja/scratchpad",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "concurrently \"next dev --turbo\" \"convex dev\"",
		"build": "next build",
		"start": "next start",
		"lint": "eslint .",
		"check": "tsc && pnpm lint && pnpm format -c && pnpm build",
		"format": "prettier -w . !\"pnpm-lock.yaml\" !\"**/_generated/**\"",
		"env:pull": "infisical export > .env.local"
	},
	"dependencies": {
		"@monaco-editor/react": "^4.7.0",
		"@tiptap/pm": "^3.3.0",
		"@tiptap/react": "^3.3.0",
		"@tiptap/starter-kit": "^3.3.0",
		"clsx": "^2.1.1",
		"convex": "^1.26.2",
		"daisyui": "^5.1.3",
		"date-fns": "4.1.0",
		"nanoid": "^5.1.5",
		"next": "15.5.2",
		"next-themes": "^0.4.6",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-icons": "^5.5.0",
		"react-markdown": "^10.1.0",
		"remark-gfm": "^4.0.1",
		"remeda": "^2.30.0",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.3.1",
		"yjs": "^13.6.27"
	},
	"devDependencies": {
		"@convex-dev/eslint-plugin": "0.0.1-alpha.4",
		"@eslint/eslintrc": "^3.3.1",
		"@tailwindcss/postcss": "^4.1.12",
		"@tailwindcss/typography": "^0.5.16",
		"@types/node": "^24.3.0",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.9",
		"concurrently": "^9.2.1",
		"eslint": "^9.34.0",
		"eslint-config-next": "^15.5.2",
		"prettier": "^3.6.2",
		"tailwindcss": "^4.1.12",
		"tw-animate-css": "^1.3.7",
		"typescript": "^5.9.2"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@clerk/shared",
			"@tailwindcss/oxide",
			"esbuild",
			"sharp",
			"unrs-resolver"
		]
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"printWidth": 120,
		"jsxSingleQuote": true,
		"useTabs": true
	}
}
